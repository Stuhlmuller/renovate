{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        ":semanticCommits",
        ":automergeMinor",
        ":automergeBranch",
        "schedule:automergeWeekly",
        ":rebaseStalePrs"
    ],
    "packageRules": [
        {
          "matchUpdateTypes": ["minor", "patch"],
          "matchCurrentVersion": "!/^0/",
          "automerge": true
        }
      ]
}